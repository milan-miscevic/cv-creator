{
    "name": "milan-miscevic/cv-creator",
    "description": "CV data structures and generators",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "cv",
        "cv creator",
        "cv generator",
        "html",
        "md",
        "profile"
    ],
    "authors": [
        {
            "name": "Milan Miščević",
            "email": "milan.miscevic@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.15.1",
        "infection/infection": "^0.26.21",
        "phpstan/phpstan": "^1.10.6",
        "phpstan/phpstan-strict-rules": "^1.5.0",
        "phpunit/phpunit": "^10.2.3",
        "vimeo/psalm": "^5.9.0"
    },
    "autoload": {
        "psr-4": {
            "Mmm\\CvCreator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mmm\\CvCreator\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        },
        "sort-packages": true
    }
}
